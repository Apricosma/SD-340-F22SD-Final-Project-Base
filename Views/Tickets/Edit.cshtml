@model SD_340_W22SD_Final_Project_Group6.Models.Ticket

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredHours" class="control-label"></label>
                <input asp-for="RequiredHours" class="form-control" />
                <span asp-validation-for="RequiredHours" class="text-danger"></span>
            </div>
            <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignedUsers)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AssignedUsers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <a asp-action="RemoveAssignedUser" asp-route-id="@item.Id" asp-route-ticketId="@Model.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
                <div class="form-group">
                    <input type="hidden" value=@Model.Id name="ticketId" />
                    <label asp-for="AssignedUsers" class="control-label">Select Users:</label>
                    <select name="userIds" asp-for="AssignedUsers" asp-items=@ViewBag.Users></select>
                    <span asp-validation-for="AssignedUsers" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
